<Window x:Class="pr7._2.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr7._2"
        mc:Ignorable="d"
        Title="Results" Height="228" Width="322">
    <Window.Background>
        <ImageBrush ImageSource="/scale_1200.jpg"/>
    </Window.Background>
    <Grid>
        <!-- Отображаем результаты вычислений -->
        <TextBlock Margin="5"></TextBlock>
        <TextBlock Margin="5,5,10,10" x:Name="resultTextBlock" FontSize="20" FontWeight="Bold" Foreground="White"/>
    </Grid>
</Window>
